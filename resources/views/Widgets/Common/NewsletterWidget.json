{
    "identifier": "Ceres::NewsletterWidget",
    "label": "Widget.newsletterLabel",
    "previewImageURL": "/images/widgets/newsletter.svg",
    "type": "static",
    "position": 500,
    "widgetClass": "Ceres\\Widgets\\Common\\NewsletterWidget",
    "settings": {
        "customClass":"@include(customClass)",
        "appearance": {
            "type": "select",
            "required": true,
            "defaultValue": "primary",
            "options": "@include(appearance)"
        },
        "showNameInputs": {
            "type": "checkbox",
            "required": true,
            "defaultValue": false,
            "options": {
                "name": "Widget.newsletterShowNameInputsLabel"
            }
        },
        "showPrivacyPolicyCheckbox": {
            "type": "checkbox",
            "required": true,
            "defaultValue": true,
            "options": {
                "name": "Widget.newsletterShowPrivacyPolicyCheckboxLabel"
            }
        },
        "emailFolder": {
            "type": "number",
            "required": true,
            "defaultValue": "",
            "options": {
                "name": "Widget.newsletterEmailFolderLabel",
                "tooltipText": "Widget.newsletterEmailFolderTooltip"
            }
        },
        "buttonSize": {
            "type": "select",
            "defaultValue": "",
            "options": {
                "name": "Widget.widgetButtonSizeLabel",
                "tooltipText": "Widget.widgetButtonSizeTooltip",
                "listBoxValues": [
                    {
                        "value": "btn-sm",
                        "caption": "Widget.widgetButtonSizeSm",
                        "position": 0
                    },
                    {
                        "value": "",
                        "caption": "Widget.widgetButtonSizeNormal",
                        "position": 1
                    },
                    {
                        "value": "btn-lg",
                        "caption": "Widget.widgetButtonSizeLg",
                        "position": 2
                    }
                ]
            }
        },
        "spacing":"@include(spacingMargin)"
    }
}
